@model EditUserViewModel

<h1>Edit User Profile</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger" ></span>
    </div>

    <div class="form-group">
        <label asp-for="RoleId">Role: </label>
        <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-control">
            <option value="" disabled>Select a role</option>
        </select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div>
            <input asp-for="IsActive" type="radio" value="true" />
            <label asp-for="IsActive" >Active</label>
        </div>
        <div>
            <input asp-for="IsActive" type="radio" value="false" />
            <label asp-for="IsActive">Inactive</label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
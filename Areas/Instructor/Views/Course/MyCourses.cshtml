@model List<Coursera.Models.Course>;

<table>
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Description</th>
            <th>Status</th>
            <th>Sections</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var course in Model)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.CourseDescription</td>
                <td>@course.ApprovalStatus</td>
                <td>
                   <ul>
                       @foreach(var sections in course.sections)
                       {
                           <li>@sections.CourseSectionName
                           <ul>
                               @foreach(var lesson in sections.courseLessons)
                               {
                                   <l1>@lesson.CourseLessonName</l1>
                               }
                           </ul>
                           </li>
                       }
                   </ul>
                </td>
                <td>
                    <a asp-action="EditCourse" asp-route-id="@course.Id">Edit</a>
                    <a asp-action="DeleteCourse" asp-route-id="@course.Id">Delete</a>
                </td>
            </tr>
       }
      
   </tbody>

</table>

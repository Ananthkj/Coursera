<!-- Content wrapper -->
 <div class="content-wrapper">
    <!-- Content -->

    <div class="container-md container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Course Section/</span> Add Course</h4>

        <!-- Basic Layout & Basic with Icons -->
        <div class="row" style="display:flex; align-items:center;justify-content:center">
            <!-- Basic Layout -->
            <div class="col-6">
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">Add Course</h5>
                       
                    </div>
                    <div class="card-body">
                        <form action="AddCourse" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="CourseName">Course Name</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="CourseName" class="form-control" id="basic-default-name" placeholder="John Doe" />
                                </div>
                            </div>

                            <div class="card mb-4">                              
                                <div class="card-body">
                                    <div class="d-flex align-items-start align-items-sm-center gap-4">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <img src="@Url.Content("/assets2/img/avatars/userProfile3.jpg")"
                                             alt="user-avatar"
                                             class="d-block rounded"
                                             height="100"
                                             width="100"
                                             id="uploadedAvatarImage" />
                                        <div class="button-wrapper">
                                            <label for="uploadImage" class="btn btn-primary me-2 mb-4" tabindex="0">
                                                <span class="d-none d-sm-block">Upload new photo</span>
                                                <i class="bx bx-upload d-block d-sm-none"></i>
                                                <input type="file"                                                    
                                                       id="uploadImage"
                                                       asp-for="formFileImage"
                                                       class="account-file-input"
                                                       hidden
                                                       accept="image/png, image/jpeg"
                                                       onchange="ChangeImage()" />                                                       
                                            </label>
                                            <button type="button" class="btn btn-outline-secondary account-image-reset mb-4" onclick="ResetImage()">
                                                <i class="bx bx-reset d-block d-sm-none"></i>
                                                <span class="d-none d-sm-block">Reset</span>
                                            </button>

                                            <p class="text-muted mb-0">Allowed JPG or PNG. Max size of 800K</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" asp-for="CourseDescription">Message</label>
                                <div class="col-sm-10">
                                    <textarea id="basic-default-message"
                                              class="form-control"
                                              asp-for="CourseDescription"
                                              placeholder="Course Description"
                                              aria-label="Hi, Do you have a moment to talk Joe?"
                                              aria-describedby="basic-icon-default-message2"></textarea>
                                </div>
                            </div>
                            <div class="row justify-content-end">
                                <div class="col-sm-5" style="padding-left:52px">
                                    <button type="submit" class="btn btn-primary">Add Course</button>
                                </div>   
                                <div class="col-sm-4" >
                                    <a href="@Url.Action("Index", "Course", new { area = "Instructor" })" class="btn btn-secondary">Cancel</a>
                                </div>

                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
            <!-- Basic with Icons -->
        </div>
    </div>
    </div> 
    <!-- / Content -->

<script>
    function ChangeImage()
    {
       var FileInput= document.getElementById("uploadImage");
      var srcImageLocation= document.getElementById("uploadedAvatarImage");
      if(FileInput && FileInput.files[0])
      {
          srcImageLocation.src=window.URL.createObjectURL(FileInput.files[0]);
      }
    }

      function ResetImage() {
        var srcImageLocation = document.getElementById("uploadedAvatarImage");
        srcImageLocation.src = "@Url.Content("/assets2/img/avatars/userProfile3.jpg")"; // Replace with your default image path
        document.getElementById("uploadImage").value = ""; // Clear the file input
    }
</script>
@model AddCourseViewModel;


<h1>Add New Course</h1>
<form action="AddCourse" method="post">
    <label asp-for="CourseName">Course Name: </label>
    <input type="text" asp-for="CourseName" /> <br /><br/>
    <label asp-for="CourseDescription">Course Description: </label>
    <input type="text" asp-for="CourseDescription" /><br /><br />

    <button type="submit">Next</button>
</form>

@model Coursera.Models.UniversityFormModel;

@{
    Layout = null; // No layout will be used
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Form Example</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: aquamarine;
        }

        .imagecontainer {
            background-image: url('/img/studentImage.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center -170px;
            width: 100%;
            height: 400px;
            border-radius: 5px;
        }
    </style>
    

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <!-- Form without Layout -->
    <fieldset style="border: 1px solid lightgray;padding: 20px; border-radius:3px">
        <div class="imagecontainer"></div>
        <form id="registrationForm" class="row g-3" method="post" asp-controller="Form" asp-action="Universityform" enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col">
                    <label asp-for="Fname" style="color:forestgreen"></label>
                    <input type="text" class="form-control" placeholder="First name" aria-label="First name" asp-for="Fname">
                    <span asp-validation-for="Fname" class="text-danger"></span>
                </div>
                <div class="col">
                    <input type="text" class="form-control" placeholder="Last name" aria-label="Last name" asp-for="Lname">
                    <span asp-validation-for="Lname" class="text-danger"></span>
                </div>
            </div> <br />

            <div class="col-md-6">
                <label for="inputEmail4" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputEmail4" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label for="inputPhone" class="form-label">Phone Number</label>
                <input type="tel" class="form-control" id="inputPhone" asp-for="Phone">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <!-- Gender Tag -->

            <div class="col-md-6">
                <label for="gender" class="form-label">Gender</label>
                <select class="form-control" id="gender" asp-for="Gender">
                    <option value="">Select your gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <!-- Date of Birth Field -->
            <div class="col-md-6">
                <label for="dob" class="form-label">Date of Birth</label>
                <input type="date" class="form-control" id="dob" placeholder="MM/DD/YYYY" asp-for="DateOfBirth">
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <!-- Country,State,City -->

            <div class="row g-3">
                <div class="col-sm">
                  @*   <input type="text" class="form-control" placeholder="Country" aria-label="Country" asp-for="Country"> *@
                    <select id="country" asp-for="Country" name="Country" class="form-control" onchange="updateState()" >
                        <option value="value" disabled selected>Select Country</option>
                        <option value="India" >India</option>
                        <option value="USA" >USA</option>
                    </select>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="col-sm">
                   @*  <input type="text" class="form-control" placeholder="State" aria-label="State" asp-for="State"> *@
                    <select id="state" asp-for="State" name="State" class="form-control" onchange="updateCities()">
                        <option value="value" disabled selected>Select State</option>
                    </select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="col-sm">
                    @* <input type="text" class="form-control" placeholder="City" aria-label="City" asp-for="City"> *@
                    <select id="city" asp-for="City" name="City" class="form-control">
                        <option value="value" disabled selected>Select City</option>
                    </select>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
               
                
            </div>

            <!-- File Upload -->

            <div class="mb-3">
                <label for="formFileSm" class="form-label">File Upload</label>
                <input class="form-control form-control-sm" id="formFileSm" type="file" asp-for="File">
                <span asp-validation-for="File" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </fieldset>


    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/your-custom-script.js"></script>
    <script src="/js/DynamicCity.js"></script>

</body>
</html>

